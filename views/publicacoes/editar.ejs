<%- include('../header') %>

<form method="POST" action="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>">
    <div class="form-group">
        <label for="titulo">Título</label>
        <input type="text" placeholder="Insira o título da publicação" class="form-control" id="titulo" name="titulo" value="<%= publicacao.titulo %>">
    </div>
    <div class="form-group">
            <label for="conteudo">Conteúdo</label>
            <textarea placeholder="Conteúdo" class="form-control" id="conteudo" name="conteudo"><%= publicacao.conteudo %></textarea>
        </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
    
<%- include('../footer') %> 
