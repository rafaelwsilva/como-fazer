<%- include('../header') %>

<table class="table table-hover table-striped">
    <thead>
        <tr>
        <th scope="col">Categoria</th>
        <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        <% categorias.forEach(categoria => { %>
        <tr>
        <td><a href="/publicacoes/categoria/<%= categoria.id %>"><%= categoria.categoria %></a></td>
        <td>
            <a href="/categorias/editar/<%= categoria.id %>">Editar</a>
            <a href="/categorias/excluir/<%= categoria.id %>">Excluir</a>
        </td>
        </tr>
        <% }) %>
    </tbody>
</table>

<a href="/categorias/nova" class="btn btn-light">Nova Categoria</a>
<a href="/publicacoes/nova" class="btn btn-light">Nova Publicação</a>
<%- include('../footer') %>
